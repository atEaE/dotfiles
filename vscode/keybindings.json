[
    // =========================================================
    // == vscode neo-vim bindings.
    // =========================================================
    // ========== Global ==========
    {
        // -- エディタにフォーカスしていて、かつNormalモードの場合、サイドバーへ移動する。
        "key": "ctrl+w ctrl+w",
        "command": "workbench.action.focusSideBar",
        "when": "neovim.mode == normal && editorFocus",
    },
    {
        // -- サイトバーにフォーカスしている場合、エディタへ移動する。
        "key": "ctrl+w ctrl+w",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus",
    },
    {
        // -- Terminalにフォーカスしている場合、Activeエディタへ移動する。
        "key": "ctrl+w .",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        // -- エディタにフォーカスしていて、かつNormalモードの場合、Terminalへ移動する。
        "key": "ctrl+w .",
        "command": "workbench.action.terminal.focus",
        "when": "neovim.mode == normal && editorFocus",
    },

    // ========== Editor ==========
    {
        // -- エディタにフォーカスしていて、かつInsertモードの場合、Normalモードへ移行する。
       "key": "j",
        "command": "vscode-neovim.compositeEscape1",
        "when": "neovim.mode == insert && editorTextFocus",
        "args": "j"
    },
    {
        // -- エディタにフォーカスしていて、かつNormalモードの場合、次のタブへ進む。
        "key": "tab",
        "command": "workbench.action.nextEditor",
        "when": "neovim.mode == normal && editorFocus"
    },
    {
        // -- エディタにフォーカスしていて、かつNormalモードの場合、前のタブへ戻る。
        "key": "shift+tab",
        "command": "workbench.action.previousEditor",
        "when": "neovim.mode == normal && editorFocus"
    },

    // ========== Explorer ==========
    {
        // -- Listに対して、フォーカスが当たっている場合、下へ移動する。
        "key": "j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、上へ移動する。
        "key": "k",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、トグルを折りたたむ。
        "key": "h",
        "command": "list.collapse",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、トグルを開く。
        "key": "l",
        "command": "list.select",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、先頭へ移動する。
        "key": "g g",
        "command": "list.focusFirst",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、最後へ移動する。
        "key": "shift+g",
        "command": "list.focusLast",
        "when": "listFocus && !inputFocus"
    },
    {
        // -- Listに対して、フォーカスが当たっている場合、キーボードナビゲーションを有効にします。(キーボードナビゲーションの設定はsettings.jsonに依存します。)
        "key": "/",
        "command": "list.toggleKeyboardNavigation",
        "when": "listFocus && !inputFocus && listSupportsKeyboardNavigation"
    },
    {
        // -- ExplorerがVisibleでかつフォーカスが当たっている場合、新しいファイルを作成する。
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus  && explorerViewletVisible && !inputFocus"
    },
    {
        // -- ExplorerがVisibleでかつフォーカスが当たっている場合、新しいフォルダを作成する。
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus  && explorerViewletVisible && !inputFocus"
    },
    {
        // -- ExplorerがVisibleでかつフォーカスが当たっている場合、ファイルを削除する。
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus  && explorerViewletVisible && !inputFocus"
    },
    {
        // -- ExplorerがVisibleでかつフォーカスが当たっている場合、OSのファイルエクスプローラーを開く。
        "key": "e",
        "command": "revealFileInOS",
        "when": "explorerViewletFocus  && explorerViewletVisible && !inputFocus"
    },
]